{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": [
        "src/**.ts"
      ],
      "rules": {
        "semi": "off",
        "comma-dangle": [
          "error",
          "only-multiline"
        ]
      }
    }
  ]
}