{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "tests/**",
            "lib/**.js"
        ]
    }
}